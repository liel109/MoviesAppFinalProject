<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.all_movies.AllMoviesFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/saved_items"
            android:textSize="30sp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_button"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="3dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/trash_can_description"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationZ="100dp"
        android:layout_weight="14">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:background="@color/background_gray">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recycle_view"
            android:translationY="30dp"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/blue"
            android:tint="@color/white"
            android:src="@drawable/ic_add"
            app:elevation="30dp"
            android:contentDescription="@string/add_item"/>

        <ImageView
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/recycle_view"
            android:layout_centerInParent="true"
            android:src="@drawable/circle"
            android:translationY="43dp"/>

        <View
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/recycle_view"
            android:background="@color/white"/>
    </RelativeLayout>
</LinearLayout>
